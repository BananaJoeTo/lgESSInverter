                <description>Power Conversion Station (PCS) standby</description>
            </channel>
            <channel id="modeWinter" typeId="switch">
                <label>Winter Status</label>
                <description>Winter status</description>
            </channel>
            <channel id="modeBackup" typeId="switch">
                <label>Backup Status</label>
                <description>Backup status</description>
            </channel>
            <channel id="pcsStatus" typeId="string">
                <label>PCS Status</label>
                <description>PCS status</description>
            </channel>
            <!-- HEATPUMP -->
            <channel id="heatpumpActivate" typeId="switch">
                <label>Heatpump Activate</label>
                <description>Heatpump activate</description>
            </channel>
            <channel id="heatpumpTemperature" typeId="string">
                <label>Heatpump Current Temperature</label>
                <description>Heatpump current remperature</description>
            </channel>
            <channel id="heatpumpEnable" typeId="switch">
                <label>Heatpump Enable</label>
                <description>Heatpump enable</description>
            </channel>
            <!-- EVCHARGER -->
            <channel id="evChargerActivate" typeId="switch">
                <label>EV Charger Activate</label>
                <description>Electric Vehilce (EV) charger activate</description>
            </channel>
            <channel id="evChargerPower" typeId="power">
                <label>EV Charger Power</label>
                <description>Electric Vehilce (EV) charger power</description>
            </channel>
            <!-- ROOT -->
            <channel id="gridWaitingTime" typeId="seconds">
                <label>Grid Waiting Time</label>
                <description>Grid waiting time</description>
            </channel>
        </channels>
    </channel-group-type>
</thing:thing-descriptions>